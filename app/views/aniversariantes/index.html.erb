<h1>Aniversariantes</h1>

<% @aniversariantes.each do |mes_ano, pessoas| %>
  <div class="card">
    <div class="card-header">
      <%= mes_ano %>
    </div>
    <ul class="list-group list-group-flush">
      <% pessoas.each do |pessoa| %>
        <li class="list-group-item">
          <p><b><%= pessoa.nome %></b></p>
          <p class="card-text"><small class="text-muted"><%= l(pessoa.data_nascimento, format: :long)%></small></p>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>