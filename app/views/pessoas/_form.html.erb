<%= form_for @pessoa, :html => { :class => "form-horizontal pessoa" } do |f| %>

  <% if @pessoa.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pessoa.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="form-row">
  
    <div class="form-group col-md-8">
      <%= f.label :nome %>
      <%= f.text_field :nome, :class => 'form-control' %>
      <%=f.error_span(:nome) %>
    </div>

    <div class="form-group col-md-4" style="margin-top: 35px;">
      <div class="form-check-inline">
        <input class="form-check-input" type="radio" name="pessoa[tipo]" id="tipo1" value="davizinho" checked>
        <label class="form-check-label" for="tipo1">
          Davizinho
        </label>
      </div>
      <div class="form-check-inline">
        <input class="form-check-input" type="radio" name="pessoa[tipo]" id="tipo2" value="outros">
        <label class="form-check-label" for="tipo2">
          Outros
        </label>
      </div>
      <%=f.error_span(:tipo) %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :data_nascimento %>
      <%= f.date_field :data_nascimento, :class => 'form-control' %>
      <%=f.error_span(:data_nascimento) %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :telefone %>
      <%= f.text_field :telefone, :class => 'form-control' %>
      <%=f.error_span(:telefone) %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= f.label :cep %>
      <%= f.text_field :cep, :class => 'form-control' %>
      <%=f.error_span(:cep) %>
    </div>

    <div class="form-group col-md-5">
      <%= f.label :endereco %>
      <%= f.text_field :endereco, :class => 'form-control' %>
      <%=f.error_span(:endereco) %>
    </div>


    <div class="form-group col-md-4">
      <%= f.label :bairro %>
      <%= f.text_field :bairro, :class => 'form-control' %>
      <%=f.error_span(:bairro) %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.label :observacoes %>
      <%= f.text_area :observacoes, :class => 'form-control' %>
      <%=f.error_span(:observacoes) %>
    </div>
  </div>

    <div class="form-group">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  pessoas_path, :class => 'btn btn-default' %>
    </div>

<% end %>
